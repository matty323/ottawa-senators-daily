<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ottawa Senators Daily Player - <%= date %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo-section">
                <h1>üèí Ottawa Senators Daily</h1>
                <p class="tagline">Your daily dose of Sens hockey</p>
            </div>
            <div class="date-section">
                <div class="date"><%= date %></div>
                <div class="day-counter">Day <%= dayOfYear %> of the year</div>
            </div>
        </header>

        <!-- Featured Player Section -->
        <section class="featured-player">
            <div class="player-card">
                <div class="player-header">
                    <h2>Today's Featured Player</h2>
                    <div class="player-basic-info">
                        <img src="<%= player.photo %>" alt="<%= player.name %>" class="player-photo" onerror="this.src='/placeholder-player.png'">
                        <div class="player-details">
                            <h3 class="player-name">#<%= player.number %> <%= player.name %></h3>
                            <div class="player-position"><%= player.position %> ‚Ä¢ <%= player.age %> years old</div>
                            <div class="player-physical"><%= player.height %> ‚Ä¢ <%= player.weight %></div>
                            <div class="player-birthplace">üìç <%= player.birthplace %></div>
                        </div>
                    </div>
                </div>

                <div class="player-content">
                    <div class="player-bio">
                        <h4>About <%= player.name.split(' ')[0] %></h4>
                        <p><%= player.bio %></p>
                        <p class="draft-info"><strong>Draft:</strong> <%= player.draftInfo %></p>
                    </div>

                    <div class="player-stats">
                        <h4>2023-24 Season Stats</h4>
                        <div class="stats-grid">
                            <% if (player.position === 'G') { %>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.games %></span>
                                    <span class="stat-label">Games</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.wins %></span>
                                    <span class="stat-label">Wins</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.losses %></span>
                                    <span class="stat-label">Losses</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.gaa %></span>
                                    <span class="stat-label">GAA</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= (player.stats.svp * 100).toFixed(1) %>%</span>
                                    <span class="stat-label">Save %</span>
                                </div>
                            <% } else { %>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.games %></span>
                                    <span class="stat-label">Games</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.goals %></span>
                                    <span class="stat-label">Goals</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.assists %></span>
                                    <span class="stat-label">Assists</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.points %></span>
                                    <span class="stat-label">Points</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value <%= player.stats.plusMinus >= 0 ? 'positive' : 'negative' %>">
                                        <%= player.stats.plusMinus >= 0 ? '+' : '' %><%= player.stats.plusMinus %>
                                    </span>
                                    <span class="stat-label">+/-</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= player.stats.pim %></span>
                                    <span class="stat-label">PIM</span>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- News Section -->
        <section class="news-section">
            <h3>üì∞ Latest Senators News</h3>
            <div class="news-grid">
                <% news.forEach(article => { %>
                    <article class="news-item">
                        <h4 class="news-title"><%= article.title %></h4>
                        <p class="news-summary"><%= article.summary %></p>
                        <div class="news-meta">
                            <span class="news-source"><%= article.source %></span>
                            <span class="news-date"><%= article.date %></span>
                        </div>
                    </article>
                <% }) %>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <p>üèí Built with ‚ù§Ô∏è for Senators fans ‚Ä¢ Come back tomorrow for another player!</p>
            <div class="api-links">
                <a href="/api/today">Today's Player API</a> ‚Ä¢ 
                <a href="/api/players">All Players API</a>
            </div>
        </footer>
    </div>

    <script>
        // Add some interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Animate stats on load
            const statValues = document.querySelectorAll('.stat-value');
            statValues.forEach(stat => {
                stat.style.opacity = '0';
                stat.style.transform = 'translateY(10px)';
                setTimeout(() => {
                    stat.style.transition = 'all 0.6s ease';
                    stat.style.opacity = '1';
                    stat.style.transform = 'translateY(0)';
                }, Math.random() * 300);
            });

            // Add click effect to news items
            const newsItems = document.querySelectorAll('.news-item');
            newsItems.forEach(item => {
                item.addEventListener('click', function() {
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 150);
                });
            });
        });
    </script>
</body>
</html>